{% extends 'base.html.twig' %}
{% trans_default_domain 'greeting' %}

{% block title %}{{ 'dashboard.title'|trans }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="{{ path('index_default', {'_locale': app.request.locale}) }}" class="btn btn-outline-secondary btn-sm"><i class="bi bi-house"></i> {{ 'dashboard.back_to_home'|trans }}</a>
        <h1>{{ 'dashboard.title'|trans }}</h1>
        <div class="dropdown">
            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                {{ app.request.locale|upper }}
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1" style="min-width: auto;">
                <li><a class="dropdown-item small" href="{{ path('greeting_dashboard', {'_locale': 'cs'}) }}">čeština</a></li>
                <li><a class="dropdown-item small" href="{{ path('greeting_dashboard', {'_locale': 'en'}) }}">english</a></li>
                <li><a class="dropdown-item small" href="{{ path('greeting_dashboard', {'_locale': 'ru'}) }}">русский</a></li>
            </ul>
        </div>
    </div>

    <h1 class="mb-4 text-center visually-hidden">{{ 'dashboard.title'|trans }}</h1>

    {# Zprávy flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show py-2 px-3" role="alert">
                <div class="alert-wrapper">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        {# --- Část 1: Import kontaktů --- #}
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">{{ 'dashboard.import_title'|trans }}</h5>
                </div>
                <div class="card-body">
                    {{ form_start(import_form) }}
                        <div class="mb-3">
                            {{ form_label(import_form.emails) }}
                            {{ form_widget(import_form.emails, {'attr': {'class': 'form-control', 'rows': 6}}) }}
                            {% if import_form.emails.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    <ul class="list-unstyled mb-0">
                                        {% for error in import_form.emails.vars.errors %}
                                            <li>
                                                <i class="bi bi-exclamation-circle-fill invalid-email-icon"></i>
                                                {{ error.message }}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                            <small class="text-muted">{{ 'dashboard.import_help'|trans }}</small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(import_form.registrationDate) }}
                            {{ form_widget(import_form.registrationDate, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(import_form.registrationDate) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(import_form.language) }}
                            {{ form_widget(import_form.language, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(import_form.language) }}
                        </div>

                        {{ form_widget(import_form.import) }}
                    {{ form_end(import_form) }}
                </div>
            </div>
            <div class="mb-4">
                <button type="button" class="btn btn-outline-secondary w-100 mt-3">{{ 'import.import_xml_button'|trans }}</button>
            </div>
        </div>

        {# --- Část 2: Odeslání pozdravů --- #}
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">{{ 'dashboard.send_title'|trans }}</h5>
                </div>
                <div class="card-body">
                    <!-- Bootstrap Tabs -->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="cs-tab" data-bs-toggle="tab"
                                    data-bs-target="#cs-tab-pane" type="button" role="tab"
                                    aria-controls="cs-tab-pane" aria-selected="true">
                                {{ 'language.czech_speaking'|trans }}
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="en-tab" data-bs-toggle="tab" data-bs-target="#en-tab-pane"
                                    type="button" role="tab" aria-controls="en-tab-pane" aria-selected="false">
                                {{ 'language.english_speaking'|trans }}
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="ru-tab" data-bs-toggle="tab" data-bs-target="#ru-tab-pane"
                                    type="button" role="tab" aria-controls="ru-tab-pane" aria-selected="false">
                                {{ 'language.russian_speaking'|trans }}
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content mt-3" id="myTabContent">
                        <div class="tab-pane fade show active" id="cs-tab-pane" role="tabpanel" aria-labelledby="cs-tab" tabindex="0">
                            <!-- Temporary text for čeština -->
                            <p>Tento je záložní text pro český jazyk.</p>
                        </div>
                        <div class="tab-pane fade" id="en-tab-pane" role="tabpanel" aria-labelledby="en-tab" tabindex="0">
                            <!-- Temporary text for english -->
                            <p>This is the placeholder text for English.</p>
                        </div>
                        <div class="tab-pane fade" id="ru-tab-pane" role="tabpanel" aria-labelledby="ru-tab" tabindex="0">
                            <!-- Temporary text for русский -->
                            <p>Это текст-заполнитель для русского языка.</p>
                        </div>
                    </div>
                    <form method="post">
                        {# Seznam kontaktů #}
                        <div class="border rounded p-2 mb-3 bg-light" style="max-height: 400px; overflow-y: auto;">
                            {% if grouped_contacts is empty %}
                                <div class="text-center text-muted py-3">{{ 'dashboard.no_contacts'|trans }}</div>
                            {% else %}
                                {% for language, contacts in grouped_contacts %}
                                    <div class="mb-2 contact-group">
                                        <h6 class="border-bottom pb-1 text-primary sticky-top bg-light pt-2">
                                            {{ ('language.' ~ language)|trans }}
                                            <small class="text-muted fw-normal" style="font-size: 0.8rem">
                                                (<a href="#" class="text-decoration-none">{{ 'dashboard.select_all'|trans }}</a>)
                                            </small>
                                        </h6>
                                        <div class="ps-2">
                                            {% for contact in contacts %}
                                                <div class="form-check contact-item">
                                                    <input class="form-check-input" type="checkbox" name="contacts[]" value="{{ contact.id }}" id="contact_{{ contact.id }}">
                                                    <label class="form-check-label" for="contact_{{ contact.id }}">
                                                        {{ contact.email }}
                                                        <small class="text-muted">- {{ contact.createdAt|date('d.m.Y') }}</small>
                                                    </label>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>

                        {# Pole e-mailu #}
                        <div class="mb-3">
                            <label for="subject" class="form-label">{{ 'dashboard.subject'|trans }}</label>
                            <input type="text" name="subject" id="subject" class="form-control" required placeholder="{{ 'dashboard.subject_placeholder'|trans }}">
                        </div>

                        <div class="mb-3">
                            <label for="body" class="form-label">{{ 'dashboard.body'|trans }}</label>
                            <textarea name="body" id="body" class="form-control" rows="5" required placeholder="{{ 'dashboard.body_placeholder'|trans }}"></textarea>
                        </div>

                        <button type="submit" name="send_greeting" class="btn btn-success w-100 btn-lg">
                            <i class="bi bi-send"></i> {{ 'dashboard.send_btn'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
