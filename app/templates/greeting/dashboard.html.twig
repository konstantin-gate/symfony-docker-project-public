{% extends 'base.html.twig' %}
{% trans_default_domain 'greeting' %}

{% block title %}{{ 'dashboard.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('greeting') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('greeting') }}
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="{{ path('index_default', {'_locale': app.request.locale}) }}" class="btn btn-outline-secondary btn-sm"><i class="bi bi-house"></i> {{ 'dashboard.back_to_home'|trans }}</a>
        <h1>{{ 'dashboard.title'|trans }}</h1>
        <div class="dropdown">
            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                {{ app.request.locale|upper }}
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1" style="min-width: auto;">
                <li><a class="dropdown-item small" href="{{ path('greeting_dashboard', {'_locale': 'cs'}) }}">čeština</a></li>
                <li><a class="dropdown-item small" href="{{ path('greeting_dashboard', {'_locale': 'en'}) }}">english</a></li>
                <li><a class="dropdown-item small" href="{{ path('greeting_dashboard', {'_locale': 'ru'}) }}">русский</a></li>
            </ul>
        </div>
    </div>

    <h1 class="mb-4 text-center visually-hidden">{{ 'dashboard.title'|trans }}</h1>

    {# Zprávy flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show py-2 px-3" role="alert">
                <div class="alert-wrapper">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        {# --- Část 1: Import kontaktů --- #}
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">{{ 'dashboard.import_title'|trans }}</h5>
                </div>
                <div class="card-body">
                    {{ form_start(import_form) }}
                        <div class="mb-3">
                            {{ form_label(import_form.emails) }}
                            {{ form_widget(import_form.emails, {'attr': {'class': 'form-control', 'rows': 6}}) }}
                            {% if import_form.emails.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    <ul class="list-unstyled mb-0">
                                        {% for error in import_form.emails.vars.errors %}
                                            <li>
                                                <i class="bi bi-exclamation-circle-fill invalid-email-icon"></i>
                                                {{ error.message }}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                            <small class="text-muted">{{ 'dashboard.import_help'|trans }}</small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(import_form.registrationDate) }}
                            {{ form_widget(import_form.registrationDate, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(import_form.registrationDate) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(import_form.language) }}
                            {{ form_widget(import_form.language, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(import_form.language) }}
                        </div>

                        {{ form_widget(import_form.import) }}
                    {{ form_end(import_form) }}
                </div>
            </div>
            <div class="mb-4">
                <button type="button" class="btn btn-outline-secondary w-100 mt-3">{{ 'import.import_xml_button'|trans }}</button>
                {% if app.environment != 'prod' %}
                    <button type="button" id="btn-generate-test-emails" class="btn btn-outline-secondary w-100 mt-2"
                            data-bs-toggle="tooltip" data-bs-placement="top"
                            title="{{ 'import.generate_test_emails_tooltip'|trans }}"
                            data-url="{{ path('greeting_generate_test_emails') }}">
                        {{ 'import.generate_test_emails'|trans }}
                    </button>
                {% endif %}
            </div>
        </div>

        {# --- Část 2: Odeslání pozdravů --- #}
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">{{ 'dashboard.send_title'|trans }}</h5>
                </div>
                <div class="card-body">
                    <!-- Bootstrap Tabs -->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        {% for lang, contacts in grouped_contacts %}
                            <li class="nav-item" role="presentation">
                                <button class="nav-link {{ loop.first ? 'active' : '' }}" id="{{ lang }}-tab" data-bs-toggle="tab"
                                        data-bs-target="#{{ lang }}-tab-pane" type="button" role="tab"
                                        aria-controls="{{ lang }}-tab-pane" aria-selected="{{ loop.first ? 'true' : 'false' }}">
                                    {{ ('language.' ~ lang ~ '_speaking')|trans }}
                                </button>
                            </li>
                        {% endfor %}
                    </ul>
                    <form method="post">
                        <div class="tab-content mt-3" id="myTabContent">
                            {% for lang, contacts in grouped_contacts %}
                                <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" id="{{ lang }}-tab-pane" role="tabpanel" aria-labelledby="{{ lang }}-tab" tabindex="0">

                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="dt-length-placeholder"></div>
                                            <div class="selection-hint d-none ms-3 text-muted small">
                                                {{ 'dashboard.selection_hint'|trans|raw }}
                                            </div>
                                        </div>
                                        <div>
                                            <button type="button" class="btn btn-sm btn-outline-primary me-2 btn-select-all">
                                                <i class="bi bi-check-all"></i> {{ 'dashboard.select_all'|trans }}
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary btn-deselect-all">
                                                <i class="bi bi-x-square"></i> {{ 'dashboard.deselect_all'|trans }}
                                            </button>
                                        </div>
                                    </div>

                                    {% if contacts is empty %}
                                        <div class="text-center text-muted py-3">{{ 'dashboard.no_contacts'|trans }}</div>
                                    {% else %}
                                        {% set total = contacts|length %}
                                        <div class="total-count-label d-none">
                                            <small class="text-muted">{{ 'dashboard.total'|trans }}: {{ total }}</small>
                                        </div>
                                        {% set per_col = (total / 3)|round(0, 'ceil') %}
                                        {% if per_col < 5 %}
                                            {% set per_col = 5 %}
                                        {% endif %}

                                        <table class="table table-bordered greeting-table w-100">
                                            <thead class="d-none">
                                                <tr>
                                                    <th>Col 1</th>
                                                    <th>Col 2</th>
                                                    <th>Col 3</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for i in 0..(per_col - 1) %}
                                                    <tr>
                                                        {% for col in 0..2 %}
                                                            {% set index = i + (col * per_col) %}
                                                            {% set contact = contacts[index] ?? null %}
                                                            <td class="{{ contact ? '' : 'empty-cell' }}">
                                                                {% if contact %}
                                                                    <div class="d-flex justify-content-between align-items-center w-100">
                                                                        <div class="form-check mb-0">
                                                                            <input class="form-check-input" type="checkbox" name="contacts[]" value="{{ contact.id }}" id="contact_{{ lang }}_{{ contact.id }}">
                                                                            <label class="form-check-label" for="contact_{{ lang }}_{{ contact.id }}">
                                                                                {{ contact.email }}
                                                                            </label>
                                                                        </div>
                                                                        <i class="bi bi-trash delete-contact-icon ms-2" role="button"></i>
                                                                    </div>
                                                                {% endif %}
                                                            </td>
                                                        {% endfor %}
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>

                        {# Pole e-mailu #}
                        <div class="mb-3">
                            <label for="subject" class="form-label">{{ 'dashboard.subject'|trans }}</label>
                            <input type="text" name="subject" id="subject" class="form-control" required placeholder="{{ 'dashboard.subject_placeholder'|trans }}">
                        </div>

                        <div class="mb-3">
                            <label for="body" class="form-label">{{ 'dashboard.body'|trans }}</label>
                            <textarea name="body" id="body" class="form-control" rows="5" required placeholder="{{ 'dashboard.body_placeholder'|trans }}"></textarea>
                        </div>

                        <button type="submit" name="send_greeting" class="btn btn-success w-100 btn-lg">
                            <i class="bi bi-send"></i> {{ 'dashboard.send_btn'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{ include('greeting/_delete_modal.html.twig') }}
{% endblock %}
